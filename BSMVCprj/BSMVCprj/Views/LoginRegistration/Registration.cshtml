@model BSMVCprj.Models.RegistrationM
@{
    ViewData["Title"] = "Registration Page";
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Name"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="@Model.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.LastName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="@Model.LastName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.LastName"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Email"></label>
            </div>
            <div class="col-5">
                <input type="email" asp-for="@Model.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.IdentityId"></label>
            </div>
            <div class="col-5">
                <input type="number" asp-for="@Model.IdentityId" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.IdentityId"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="@Model.UserName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.UserName"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="@Model.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.BankCard"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="@Model.BankCard" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.BankCard"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input type="submit" class="btn-primary" value="Sign up" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>