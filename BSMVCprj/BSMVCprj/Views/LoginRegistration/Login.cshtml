@model BSMVCprj.Models.LoginM
@{
    ViewData["Title"] = "Login Page";
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="@Model.UserName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.UserName"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="@Model.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input type="submit" class="btn-primary" value="Login" />
            </div>
            <div class="alert-danger">
                @if (ViewData["Loginflag"] != null)
                {
                    @ViewData["Loginflag"]
                }
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>
