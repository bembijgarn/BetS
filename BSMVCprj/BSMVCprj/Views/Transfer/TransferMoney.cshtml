@model BSMVCprj.Models.MoneyTransferM
@{
    ViewData["Title"] = "Transaction Page";
}


<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Email"></label>
            </div>
            <div class="col-5">
                <input type="email" asp-for="@Model.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Amount"></label>
            </div>
            <div class="col-5">
                <input type="number" asp-for="@Model.Amount" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Amount"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input type="submit" class="btn-primary" value="Transfer" />
            </div>
            <div class="alert-danger">
                @if (ViewData["Loginflag"] != null)
                {
                    @ViewData["Loginflag"]
                }
            </div>
            <div class="alert-success">
                @if (TempData["Loginflag"] != null)
                {
                    @TempData["Loginflag"]
                }
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>
